<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="98dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_view_margin"
    app:cardCornerRadius="@dimen/card_view_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/perfil_foto_width"
            android:layout_height="@dimen/perfil_foto_height"
            android:id="@+id/card_view_perfil_foto"
            android:layout_gravity="center_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/card_view_perfil_likes"
                android:gravity="center"
                android:layout_toLeftOf="@+id/card_view_perfil_like"
                android:layout_toStartOf="@+id/card_view_perfil_like"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:padding="4dp"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:id="@+id/card_view_perfil_like"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:src="@drawable/hueso_amarillo"/>
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>