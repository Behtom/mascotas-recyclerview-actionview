<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="xyz.behtotm.mascotas.FormularioActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_formulario_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/formulario_parent_padding">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_formulario_input_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/formulario_nombre">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_formulario_nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_formulario_input_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/formulario_correo">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_formulario_correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_formulario_input_mensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/formulario_mensaje">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_formulario_mensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/activity_formulario_enviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/formulario_enviar"/>
    </LinearLayout>
</LinearLayout>
